<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.rest.client.ds.ClientProxy" />

        <import type="com.rest.client.utils.Utils" />

        <import type="android.content.Context" />

        <variable
            name="cxt"
            type="Context" />

        <variable
            name="client"
            type="ClientProxy" />


        <variable
            name="position"
            type="int" />

    </data>


    <android.support.v7.widget.CardView
        style="@style/BoxCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        card_view:cardBackgroundColor="@{position % 2 != 0? @color/common_grey :  @color/common_white }">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comment_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{client.getComment()}" />

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:lineSpacingExtra="3dp"
                android:text="@{Utils.timeConvert( cxt, client.getReqTime() )}" />

            <ImageView
                android:id="@+id/update_status_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_upload"
                android:visibility="@{client.getStatus() == com.rest.client.ds.ClientProxy.NOT_SYNCED ? View.VISIBLE : View.INVISIBLE}" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>